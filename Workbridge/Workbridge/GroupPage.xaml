<Page x:Class="Workbridge.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Groups">

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="D:\Workbridge\images\modern-polygon.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Gradient Overlay -->
        <Rectangle Opacity="0.3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#162938" Offset="0.0"/>
                    <GradientStop Color="Transparent" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <!-- Title -->
            <TextBlock Text="GROUPS" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#162938" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <!-- Search Group -->
            <TextBlock Text="Find Groups" 
                       FontSize="20" 
                       Foreground="#162938" 
                       FontWeight="Bold" 
                       Margin="0,5,0,5"/>
            <TextBox x:Name="SearchBox" 
                     Height="40" 
                     Padding="10" 
                     Background="White" 
                     Foreground="#162938" 
                     BorderBrush="#4CA1AF" 
                     BorderThickness="1"
                     TextChanged="SearchGroups"
                     FontSize="16"/>

            <!-- List of Groups -->
            <TextBlock Text="Groups List" 
                       FontSize="20" 
                       Foreground="#162938" 
                       FontWeight="Bold" 
                       Margin="0,10,0,5"/>
            <ListBox x:Name="GroupsList" 
                     Height="200" 
                     Background="White" 
                     BorderBrush="#4CA1AF" 
                     BorderThickness="1"
                     FontSize="16">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding}" 
                                       FontSize="16" 
                                       Foreground="#162938"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Create New Group -->
            <TextBlock Text="Create New Group" 
                       FontSize="20" 
                       Foreground="#162938" 
                       FontWeight="Bold" 
                       Margin="0,10,0,5"/>
            <TextBox x:Name="GroupNameBox" 
                     Height="40" 
                     Padding="10" 
                     Background="White" 
                     Foreground="#162938" 
                     BorderBrush="#4CA1AF" 
                     BorderThickness="1"
                     FontSize="16"/>

            <!-- Create Group Button -->
            <Button Content="Create Group" 
                    Width="150" 
                    Height="40" 
                    Margin="0,20,0,0" 
                    Click="CreateGroup"
                    Background="#1ABC9C" 
                    Foreground="White" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#16A085"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Page>