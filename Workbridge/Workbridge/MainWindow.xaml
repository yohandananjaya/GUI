<Window x:Class="Workbridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workbridge" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <DockPanel>
        <!-- Sidebar Navigation -->
        <Grid DockPanel.Dock="Left" Width="200">
            <!-- Gradient Background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0.0"/>
                    <GradientStop Color="#34495E" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Sidebar Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Navigation Buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Logout Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Workbridge" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="20,20,20,30" 
                       HorizontalAlignment="Center"/>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Row="1" Margin="10,0,10,0">
                <!-- Home Button -->
                <Button Content="Home" 
                        Click="GoToHome" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <!-- Profile Button -->
                <Button Content="Profile" 
                        Click="GoToProfile" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <!-- Groups Button -->
                <Button Content="Groups" 
                        Click="GoToGroup" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Logout Button -->
            <Button Content="Logout" 
                    Grid.Row="2" 
                    Click="Logout" 
                    Foreground="White" 
                    Background="#E74C3C" 
                    FontSize="16" 
                    Padding="10,5" 
                    Margin="32,10,32,20"
                    Cursor="Hand"/>
        </Grid>

        <!-- Main Content -->
        <Frame Name="MainContent" 
               NavigationUIVisibility="Hidden" 
               Background="#F5F5F5"/>
    </DockPanel>
</Window>
