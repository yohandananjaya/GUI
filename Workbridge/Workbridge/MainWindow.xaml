<Window x:Class="Workbridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workbridge"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define Two Columns: Sidebar (Fixed Width) and Main Content (Expandable) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content (Expands) -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Grid Grid.Column="0">
            <!-- Gradient Background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0.0"/>
                    <GradientStop Color="#34495E" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Sidebar Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Navigation Buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Logout Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Workbridge" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="20,20,20,30" 
                       HorizontalAlignment="Center"/>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Row="1" Margin="10,0,10,0">
                <Button Content="Home" 
                        Click="GoToHome" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <!-- New WB Button for Share Post -->
                <Button Content="WB" 
                        Click="SharePost" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <Button Content="Profile" 
                        Click="GoToProfile" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <Button Content="Groups" 
                        Click="GoToGroup" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

                <Button Content="Messages" 
                        Click="GoToMessages" 
                        Foreground="White" 
                        Background="Transparent" 
                        FontSize="16" 
                        Padding="10,5" 
                        Margin="0,5" 
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"/>

            </StackPanel>

            <!-- Logout Button -->
            <Button Content="Logout" 
                    Grid.Row="2" 
                    Click="Logout" 
                    Foreground="White" 
                    Background="#E74C3C" 
                    FontSize="16" 
                    Padding="10,5" 
                    Margin="32,10,32,20"
                    Cursor="Hand"/>
        </Grid>

        <!-- Main Content -->
        <Frame Name="MainContent" 
               Grid.Column="1"
               NavigationUIVisibility="Hidden" 
               Background="#F5F5F5"/>
    </Grid>
</Window>