<Page x:Class="Workbridge.MessagesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Messages"
      Background="AliceBlue">

    <Grid>
        <!-- Title -->
        <TextBlock Text="Messages" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>

        <!-- Tab Control for Inbox and Sendbox -->
        <TabControl Margin="20,60,20,100" Background="White" BorderBrush="#CCCCCC">
            <!-- Inbox Tab -->
            <TabItem Header="Inbox">
                <ListBox x:Name="InboxList" 
                         Background="White" 
                         BorderBrush="#CCCCCC" 
                         BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Sender}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50"/>
                                <TextBlock Text="{Binding Content}" 
                                           FontSize="14" 
                                           Foreground="#555555" 
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Timestamp}" 
                                           FontSize="12" 
                                           Foreground="#777777" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <!-- Sendbox Tab -->
            <TabItem Header="Sendbox">
                <ListBox x:Name="SendboxList" 
                         Background="White" 
                         BorderBrush="#CCCCCC" 
                         BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Receiver}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50"/>
                                <TextBlock Text="{Binding Content}" 
                                           FontSize="14" 
                                           Foreground="#555555" 
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Timestamp}" 
                                           FontSize="12" 
                                           Foreground="#777777" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

        <!-- Message Input Area -->
        <StackPanel VerticalAlignment="Bottom" Margin="20">
            <TextBox x:Name="MessageInput" 
                     Height="60" 
                     Padding="10" 
                     Background="White" 
                     Foreground="#2C3E50" 
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"/>

            <Button Content="Send Message" 
                    Width="120" 
                    Height="35" 
                    Margin="0,10,0,0" 
                    Click="SendMessage_Click"
                    Background="#1ABC9C" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>