<Window x:Class="Workbridge.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register - Workbridge" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Background Image -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\user\Desktop\GUI\gg.png" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Gradient Overlay -->
        <Rectangle Opacity="0.6" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0.0"/>
                    <!-- Dark Blue -->
                    <GradientStop Color="#4CA1AF" Offset="1.0"/>
                    <!-- Light Blue -->
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Content -->
        <Grid Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Full Name -->
                <RowDefinition Height="Auto"/>
                <!-- Email -->
                <RowDefinition Height="Auto"/>
                <!-- Password -->
                <RowDefinition Height="Auto"/>
                <!-- Register Button -->
                <RowDefinition Height="Auto"/>
                <!-- Back to Login Button -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title: "Register" -->
            <TextBlock Text="Register" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="2" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Full Name -->
            <TextBlock Text="Full Name:" 
                       Grid.Row="1" 
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,10" 
                       Foreground="White" 
                       FontSize="14"/>
            <TextBox Name="FullNameBox" 
                     Grid.Row="1" 
                     Grid.Column="1" 
                     Margin="0,0,0,10" 
                     Padding="8" 
                     Background="#FFFFFF" 
                     Foreground="#2C3E50" 
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1" 
                     FontSize="10"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                       Grid.Row="2" 
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,10" 
                       Foreground="White" 
                       FontSize="14"/>
            <TextBox Name="EmailBox" 
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Margin="0,0,0,10" 
                     Padding="8" 
                     Background="#FFFFFF" 
                     Foreground="#2C3E50" 
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1" 
                     FontSize="10"/>

            <!-- Password -->
            <TextBlock Text="Password:" 
                       Grid.Row="3" 
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,10" 
                       Foreground="White" 
                       FontSize="14"/>
            <PasswordBox Name="PasswordBox" 
                         Grid.Row="3" 
                         Grid.Column="1" 
                         Margin="0,0,0,10" 
                         Padding="8" 
                         Background="#FFFFFF" 
                         Foreground="#2C3E50" 
                         BorderBrush="#CCCCCC" 
                         BorderThickness="1" 
                         FontSize="10"/>

            <!-- Register Button -->
            <Button Content="Register" 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    Width="100" 
                    HorizontalAlignment="Left" 
                    Margin="0,20,0,10" 
                    Click="Register_Click"
                    Background="#1ABC9C" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#16A085"/>
                                <!-- Darker green on hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Back to Login Button -->
            <Button Content="Back to Login" 
                    Grid.Row="5" 
                    Grid.Column="1" 
                    Width="100" 
                    HorizontalAlignment="Left" 
                    Margin="0,10,0,10" 
                    Click="BackToLogin"
                    Background="#3498DB" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <!-- Darker blue on hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>