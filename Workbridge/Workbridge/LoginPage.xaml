<Window x:Class="Workbridge.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Workbridge" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Background Image -->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\user\Desktop\GUI\gg.png" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Gradient Overlay for Better Readability -->
        <Rectangle Opacity="0.8">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0.0"/>
                    <!-- Dark Blue -->
                    <GradientStop Color="#4CA1AF" Offset="1.0"/>
                    <!-- Light Blue -->
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- Logo or Title -->
            <TextBlock Text="Workbridge" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Email Input -->
            <TextBlock Text="Email" 
                       FontSize="14" 
                       Foreground="White" 
                       Margin="0,10,0,5"/>
            <TextBox Name="EmailBox" 
                     Height="30" 
                     Padding="5" 
                     Background="#FFFFFF" 
                     Foreground="#2C3E50" 
                     BorderBrush="#4CA1AF" 
                     BorderThickness="1" 
                     Opacity="0.9"/>

            <!-- Password Input -->
            <TextBlock Text="Password" 
                       FontSize="14" 
                       Foreground="White" 
                       Margin="0,10,0,5"/>
            <PasswordBox Name="PasswordBox" 
                         Height="30" 
                         Padding="5" 
                         Background="#FFFFFF" 
                         Foreground="#2C3E50" 
                         BorderBrush="#4CA1AF" 
                         BorderThickness="1" 
                         Opacity="0.9"/>

            <!-- Login Button -->
            <Button Content="Login" 
                    Width="100" 
                    Height="35" 
                    Margin="0,20,0,10" 
                    Click="Login_Click"
                    Background="#1ABC9C" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <!-- Rounded corners -->
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#16A085"/>
                                <!-- Darker green on hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Register Button -->
            <Button Content="Register" 
                    Width="100" 
                    Height="35" 
                    Click="OpenRegisterPage"
                    Background="#3498DB" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <!-- Rounded corners -->
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <!-- Darker blue on hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>