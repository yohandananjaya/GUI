<Page x:Class="Workbridge.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">

    <Grid>
        <!-- Background Wallpaper -->
        <Grid.Background>
            <ImageBrush ImageSource="D:\Workbridge\images\modern-polygon.jpg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>

        <!-- Gradient Overlay -->
        <Rectangle Opacity="0.2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1ABC9C" Offset="0.0"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Content -->
        <Viewbox Stretch="Uniform">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Welcome Text -->
                <TextBlock x:Name="WelcomeText" 
                           Text="WORKBRIDGE" 
                           FontSize="30" 
                           FontWeight="Bold" 
                           Foreground="#162938" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,20"/>

                <!-- Search Bar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- TextBox for Search Input -->
                    <Grid Width="300" Height="30">
                        <TextBox x:Name="SearchTextBox" 
                                 Width="300" 
                                 Height="30" 
                                 Padding="5" 
                                 Background="White" 
                                 Foreground="#2C3E50" 
                                 BorderBrush="#4CA1AF" 
                                 BorderThickness="1" 
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchTextBox_TextChanged"
                                 GotFocus="SearchTextBox_GotFocus"
                                 LostFocus="SearchTextBox_LostFocus"/>
                        <!-- Placeholder Text -->
                        <TextBlock x:Name="SearchPlaceholder" 
                                   Text="Search jobs..." 
                                   Foreground="Gray" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" 
                                   Margin="5,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>
                    <Button Content="Search" 
                            Width="80" 
                            Height="30" 
                            Margin="10,0,0,0" 
                            Click="SearchButton_Click"
                            Background="#1ABC9C" 
                            Foreground="White" 
                            FontSize="14" 
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#16A085"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Job Search Buttons (2x2 Grid Layout with Expanded Gaps) -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,40" Width="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <!-- Expanded gap -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Find Jobs -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                        <Image Source="D:\Workbridge\images\occupations_e801217af0.png" Width="106" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button Content="Full Time Jobs" 
                                Width="140" 
                                Height="40" 
                                Click="FindJobs_Click"
                                Background="#162938" 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#16A085"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Part-Time Jobs -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                        <Image Source="D:\Workbridge\images\parttime.png" Width="138" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button Content="Part-Time Jobs" 
                                Width="140" 
                                Height="40" 
                                Click="PartTimeJobs_Click"
                                Background="#162938" 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Remote Jobs -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                        <Image Source="D:\Workbridge\images\OIP.png" Width="98" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button Content="Remote Jobs" 
                                Width="140" 
                                Height="40" 
                                Click="RemoteJobs_Click"
                                Background="#162938" 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#8E44AD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Freelance Jobs -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                        <Image Source="D:\Workbridge\images\freelance.png" Width="96" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button Content="Freelance Jobs" 
                                Width="140" 
                                Height="40" 
                                Click="FreelanceJobs_Click"
                                Background="#162938" 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D35400"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>